platform :ios, '9.0'
use_frameworks!
inhibit_all_warnings!

install! 'cocoapods',
:generate_multiple_pod_projects => true,
:incremental_installation => true

target 'KFXUtilities_Example' do
  pod 'KFXUtilities', :path => '../'
  
  ### If using from trunk
  source 'https://cdn.cocoapods.org/'
  pod 'KFXCore'

  target 'KFXUtilities_Tests' do
    inherit! :search_paths
  end
end
